<div id="user-wallets" class="container">
  <div class="row">
    <h6>Your coins</h6>
  </div>

  <div class="row cards">
    <% wallets.forEach(function (wallet) { %>
      <div class="card shadow-sm card-item" style="width: 10rem;">
        <div class="card-body p-3">
          <h6 class="card-title">
            <%= wallet.coin.name %>
          </h6>

          <div>
            <b class="pr-1"><%= wallet.balance %></b>
            <i class="fa <%= wallet.coin.iconCSSClass %>"></i>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
